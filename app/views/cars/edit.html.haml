.row
  .span6
    .media.margin-bottom
      .media-body.margin-bottom
        %h4.media-heading 
          Editing
          %span.muted
            = @car.make
      .clearfix
    =image_tag @car.car_photo.url(:medium)
  .span6
    = form_for(:car, :url => {:action => 'update_car', :id => @car.id}) do |f|
      .field
        = f.label 'make'
        = f.text_field :make
      .field
        = f.label 'model'
        = f.text_field :car_model, :required => true
      .field
        = f.label 'year'
        = f.text_field :year, :required => true
      .field
        = f.label 'color'
        = f.text_field :color, :required => true
      .field
        = f.label 'number of doors'
        = f.text_field :number_of_doors, :required => true
      .field
        = f.label 'plate number'
        = f.text_field :plate_number
      .field
        = f.label 'Update Photo'
        = f.file_field :car_photo, :required => false
      %hr
      .form-buttons
        = submit_tag("Update Car", :class=>"btn")
        = link_to("Cancel", {:action => 'show'}, :class => 'btn btn-danger')
