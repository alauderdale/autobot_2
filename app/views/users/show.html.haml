.row
  .span12
    .media
      = link_to (@user), :class => "pull-left" do 
        %img.media-object.avatar-lg{:src => "#{@user.avatar.url(:medium)}"}
      .media-body
        %h4.media-heading 
          = @user.name
        %p.muted
          = @user.email
      .clearfix

.page-header
  %h5.no-margin-bottom
    =@user.cars.count
    -if @user.cars.count != 1
      Cars
    -else
      Car

-@user.cars.each do |c|
  = render :partial => 'shared/car_thumb', :locals => {:c => c}

